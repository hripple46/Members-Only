<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="./output.css" rel="stylesheet" />
    <title><%= title %></title>
  </head>
  <body>
    <% if (!user) { %>
    <a href="/user/create"> <button>Create Account</button></a>
    <a href="/user/login"> <button>Login</button></a>
    <h1><%= title %></h1>
    <p><%= body %></p>
    <% } else { %>
    <h1>
      Greetings, <% if (user.firstName) { %><%= user.firstName %><% } else {
      %><%= user.username %><% } %>
    </h1>

    <p>Membership Level: <%= user.memberStatus %></p>
    <a href="/user/logout"> <button>Logout</button></a>
    <a href="/user/<%= user._id %>/newmessage">
      <button>Create Message</button></a
    >
    <% if (user.memberStatus !== "VIP") { %>
    <a href="/user/<%= user._id %>/updateMembership"
      ><p>Upgrade to VIP to see other users' names!</p></a
    >
    <% } %> <% for (let message of messages) { %> <% if (user.memberStatus ===
    "VIP") { %>
    <div class="bg-sky-300 rounded-lg text-white mt-2 mb-2 p-2">
      <p><%= message.text %></p>
      <p><%= message.user.username %></p>
      <p><%= message.Date %></p>
    </div>
    <% } else { %>
    <div class="bg-sky-300 rounded-lg text-white mt-2 mb-2 p-2">
      <p><%= message.text %></p>
      <p>Anonymous</p>
    </div>
    <% } %> <% } %> <% } %>
  </body>
</html>
